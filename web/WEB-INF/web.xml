<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>LoginGoogleServlet</servlet-name>
        <servlet-class>Controller.LoginGoogleServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ViewEventController</servlet-name>
        <servlet-class>Controller.ViewEventController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ViewEventDetailsController</servlet-name>
        <servlet-class>Controller.ViewEventDetailsController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ViewPostController</servlet-name>
        <servlet-class>Controller.ViewPostController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ViewPostDetailsController</servlet-name>
        <servlet-class>Controller.ViewPostDetailsController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddMoreEventCommentController</servlet-name>
        <servlet-class>Controller.AddMoreEventCommentController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddMorePostCommentController</servlet-name>
        <servlet-class>Controller.AddMorePostCommentController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoadMoreEventCommentController</servlet-name>
        <servlet-class>Controller.LoadMoreEventCommentController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoadMorePostCommentController</servlet-name>
        <servlet-class>Controller.LoadMorePostCommentController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CreatePostController</servlet-name>
        <servlet-class>Controller.CreatePostController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UpdatePostController</servlet-name>
        <servlet-class>Controller.UpdatePostController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RemovePostController</servlet-name>
        <servlet-class>Controller.RemovePostController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ViewOwnedPostController</servlet-name>
        <servlet-class>Controller.ViewOwnedPostController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UpdatePostViewController</servlet-name>
        <servlet-class>Controller.UpdatePostViewController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginGoogleServlet</servlet-name>
        <url-pattern>/LoginGoogleServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ViewEventController</servlet-name>
        <url-pattern>/ViewEventController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ViewEventDetailsController</servlet-name>
        <url-pattern>/ViewEventDetailsController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ViewPostController</servlet-name>
        <url-pattern>/ViewPostController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ViewPostDetailsController</servlet-name>
        <url-pattern>/ViewPostDetailsController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddMoreEventCommentController</servlet-name>
        <url-pattern>/AddMoreEventCommentController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddMorePostCommentController</servlet-name>
        <url-pattern>/AddMorePostCommentController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoadMoreEventCommentController</servlet-name>
        <url-pattern>/LoadMoreEventCommentController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoadMorePostCommentController</servlet-name>
        <url-pattern>/LoadMorePostCommentController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CreatePostController</servlet-name>
        <url-pattern>/CreatePostController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UpdatePostController</servlet-name>
        <url-pattern>/UpdatePostController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RemovePostController</servlet-name>
        <url-pattern>/RemovePostController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ViewOwnedPostController</servlet-name>
        <url-pattern>/ViewOwnedPostController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UpdatePostViewController</servlet-name>
        <url-pattern>/UpdatePostViewController</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>login.jsp</welcome-file>
    </welcome-file-list>
    <resource-ref>
        <description>EventManagementFPT</description>
        <res-ref-name>Database</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
        <res-sharing-scope>Shareable</res-sharing-scope>
    </resource-ref>
    <context-param>
        <description>Location to store uploaded file</description>
        <param-name>file-upload</param-name>
        <param-value>
            /WEB-INF/saveFiles/
        </param-value>
    </context-param>
</web-app>
